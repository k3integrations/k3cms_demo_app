<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <%= stylesheet_link_tag :all, :recursive => true %>
    <%= javascript_include_tag :defaults, :k3 %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <%= render_cell 'k3/ribbon', :show, :current_page => @page %>
    
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
